<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/airforce"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingBottom="16dp"
    android:paddingStart="15dp"
    >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"

        android:layout_marginLeft="22dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="150dp"
        android:textSize="17sp"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:text="Previous Email" />


    <EditText
        android:id="@+id/email1"
        android:layout_width="196dp"
        android:layout_height="25dp"
        android:layout_alignTop="@+id/textView1"
        android:layout_marginStart="150dp"
        android:ems="15"
        android:hint="email"
        android:inputType="textEmailAddress"
        android:textColor="#000000"
        android:textSize="15sp"
        android:textStyle="bold"
        android:visibility="visible"
        android:background="@drawable/edt_background"
        android:layout_marginLeft="5dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="22dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="200dp"
        android:textSize="17sp"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:text="New Email" />


    <EditText
        android:id="@+id/email2"
        android:layout_width="196dp"
        android:layout_height="25dp"
        android:layout_alignStart="@+id/email1"
        android:layout_alignTop="@+id/textView2"
        android:background="@drawable/edt_background"
        android:ems="15"
        android:hint="new_email"
        android:textSize="15sp"
        android:visibility="visible"
        android:inputType="textEmailAddress"
        android:textColor="#000000"
        android:textStyle="bold"
        android:layout_alignLeft="@+id/email1" />

    <TextView
    android:id="@+id/textView4"
    android:layout_width="wrap_content"
    android:layout_height="25dp"

    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"

    android:layout_marginLeft="22dp"
    android:layout_marginStart="15dp"
    android:layout_marginTop="250dp"
    android:text="Number"
    android:textColor="@android:color/white"
    android:textSize="17sp"
    android:textStyle="bold" />

    <EditText
        android:id="@+id/number1"
        android:layout_width="196dp"
        android:layout_height="25dp"
        android:background="@drawable/edt_background"
        android:layout_alignStart="@+id/email1"
        android:hint="number"
        android:layout_alignTop="@+id/textView4"
        android:ems="15"
        android:inputType="number"
        android:textSize="15sp"
        android:textStyle="bold"
        android:visibility="visible"
        android:layout_alignLeft="@+id/email1" />
    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="25dp"

        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"

        android:layout_marginLeft="22dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="300dp"
        android:text="new number"
        android:textColor="@android:color/white"
        android:textSize="17sp"
        android:textStyle="bold"
        android:layout_alignLeft="@+id/textView" />

    <EditText
        android:id="@+id/number2"
        android:layout_width="196dp"
        android:layout_height="25dp"
        android:layout_alignStart="@+id/email1"
        android:hint="new number"
        android:background="@drawable/edt_background"
        android:layout_alignTop="@+id/textView5"
        android:ems="15"
        android:textSize="15sp"
        android:textColor="#000000"
        android:inputType="number"
        android:textStyle="bold"
        android:visibility="visible"
        android:layout_alignLeft="@+id/email1" />

    <Button
        android:id="@+id/save"
        android:layout_width="100dp"
        android:layout_height="72dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="62dp"
        android:background="@drawable/rectriangle_btn"
        android:text="SAVE"
        android:textColor="#ffffff" />








</RelativeLayout>