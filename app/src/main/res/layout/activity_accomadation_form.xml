<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".accomadation_form"
    android:background="@drawable/ac1">



    <TextView
        android:id="@+id/text"
        android:layout_width="240dp"
        android:layout_height="27dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:text="Accomodation Form"
        android:textColor="#000000"
        android:textSize="25dp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/textView0"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/textView"
        android:layout_marginTop="240dp"
        android:text="Date of Apply"
        android:textColor="@android:color/white"
        android:textSize="17sp"
        android:textStyle="bold"
        android:layout_alignLeft="@+id/textView" />

    <EditText
        android:id="@+id/dateofapply"
        android:layout_width="180dp"
        android:layout_height="25dp"
        android:layout_alignStart="@+id/name"
        android:layout_alignTop="@+id/textView0"
        android:ems="10"
        android:inputType="date"
        android:text="date of apply"
        android:textSize="15sp"
        android:textColor="#000000"
        android:background="@drawable/edt_background"
        android:layout_alignLeft="@+id/name" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="80dp"
        android:text="Name"
        android:textColor="@android:color/white"
        android:textSize="17sp"
        android:textStyle="bold"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="20dp" />

    <EditText
        android:id="@+id/name"
        android:layout_width="180dp"
        android:layout_height="25dp"
        android:layout_alignTop="@+id/textView"
        android:layout_marginStart="180dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="name"
        android:textSize="15sp"
        android:textColor="#000000"
        android:background="@drawable/edt_background"
        android:layout_marginLeft="150dp" />



    <Button
        android:id="@+id/sub"
        android:layout_width="115dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="12dp"
        android:background="@drawable/rounded_btn"
        android:text="SUBMIT"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/textView"
        android:layout_marginTop="120dp"
        android:text="Bd"
        android:textColor="@android:color/white"
        android:textSize="17sp"
        android:textStyle="bold"
        android:layout_alignLeft="@+id/textView" />

    <EditText
        android:id="@+id/bd"
        android:layout_width="180dp"
        android:layout_height="25dp"
        android:layout_alignStart="@+id/name"
        android:layout_alignTop="@+id/textView2"
        android:ems="10"
        android:inputType="number"
        android:text="bd"
        android:textSize="15sp"
        android:textColor="#000000"
        android:background="@drawable/edt_background"
        android:layout_alignLeft="@+id/name" />


    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/textView"
        android:layout_marginTop="160dp"
        android:text="Rank"
        android:textColor="@android:color/white"
        android:textSize="17sp"
        android:textStyle="bold"
        android:layout_alignLeft="@+id/textView" />


    <EditText
        android:id="@+id/rank"
        android:layout_width="180dp"
        android:layout_height="25dp"
        android:layout_alignEnd="@+id/name"
        android:layout_alignTop="@+id/textView3"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="rank"
        android:textSize="15sp"
        android:textColor="#000000"
        android:background="@drawable/edt_background"
        android:layout_alignRight="@+id/name" />


    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/textView"
        android:layout_marginTop="200dp"
        android:text="Base"
        android:textColor="@android:color/white"
        android:textSize="17sp"
        android:textStyle="bold"
        android:layout_alignLeft="@+id/textView" />


    <EditText
        android:id="@+id/base"
        android:layout_width="180dp"
        android:layout_height="25dp"
        android:layout_alignStart="@+id/name"
        android:layout_alignTop="@+id/textView4"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="base"
        android:textSize="15sp"
        android:textColor="#000000"
        android:background="@drawable/edt_background"
        android:layout_alignLeft="@+id/name" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/textView"
        android:layout_marginTop="280dp"
        android:text="Contact Number"
        android:textColor="@android:color/white"
        android:textSize="17sp"
        android:textStyle="bold"
        android:layout_alignLeft="@+id/textView0" />

    <EditText
        android:id="@+id/contactnumber"
        android:layout_width="180dp"
        android:layout_height="25dp"
        android:layout_alignEnd="@+id/name"
        android:layout_alignTop="@+id/textView5"
        android:inputType="number"
        android:text="contactnumber"
        android:textSize="15sp"
        android:textColor="#000000"
        android:background="@drawable/edt_background"
        android:layout_alignRight="@+id/name" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/textView"
        android:layout_marginTop="320dp"
        android:text="emailaddress"
        android:textColor="@android:color/white"
        android:textSize="17sp"
        android:textStyle="bold"
        android:layout_alignLeft="@+id/textView0" />


    <EditText
        android:id="@+id/email"
        android:layout_width="180dp"
        android:layout_height="25dp"
        android:layout_alignBottom="@+id/textView9"
        android:layout_alignEnd="@+id/name"
        android:inputType="textEmailAddress"
        android:text="emailaddress"
        android:textSize="15sp"
        android:textColor="#000000"
        android:background="@drawable/edt_background"
        android:layout_alignRight="@+id/name" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"

        android:layout_height="30dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/textView"
        android:layout_marginTop="360dp"
        android:text="Date of  Comission"
        android:textColor="@android:color/white"
        android:textSize="17sp"
        android:textStyle="bold"
        android:layout_alignLeft="@+id/textView0" />

    <EditText
        android:id="@+id/dateofcommision"
        android:layout_width="180dp"
        android:layout_height="25dp"
        android:layout_alignEnd="@+id/name"
        android:layout_alignTop="@+id/textView6"
        android:inputType="date"
        android:text="dateofcomission"
        android:textSize="15sp"
        android:textColor="#000000"
        android:background="@drawable/edt_background"
        android:layout_alignRight="@+id/name" />


    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/textView0"
        android:layout_marginTop="400dp"
        android:text="Present Address"
        android:textColor="@android:color/white"
        android:textSize="17sp"
        android:textStyle="bold"
        android:layout_alignLeft="@+id/textView0" />

    <EditText
        android:id="@+id/presentaddress"
        android:layout_width="180dp"
        android:layout_height="25dp"

        android:layout_alignEnd="@+id/name"
        android:layout_alignTop="@+id/textView7"
        android:inputType="textPersonName"
        android:text="presentaddress"
        android:textSize="15sp"
        android:textColor="#000000"
        android:background="@drawable/edt_background"
        android:layout_alignRight="@+id/name" />


    <TextView
        android:id="@+id/textView8"
        android:layout_width="118dp"
        android:layout_height="30dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/textView0"
        android:layout_marginTop="440dp"
        android:text="no of children"
        android:textColor="@android:color/white"
        android:textSize="17sp"
        android:textStyle="bold"
        android:layout_alignLeft="@+id/textView0" />

    <EditText
        android:id="@+id/noofchildren"
        android:layout_width="180dp"
        android:layout_height="25dp"
        android:layout_alignBottom="@+id/textView8"
        android:layout_alignStart="@+id/name"
        android:inputType="number"
        android:text="no of children"
        android:textSize="15sp"
        android:textColor="#000000"
        android:background="@drawable/edt_background"
        android:layout_alignLeft="@+id/name" />





</RelativeLayout>